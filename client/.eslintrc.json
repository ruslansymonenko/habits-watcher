{
    "env": {
        "browser": true,
        "es2021": true
        // "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react", 
        "react-hooks", 
        "@typescript-eslint", 
        "prettier"
    ],
    "settings": {
        "import/resolver": {
        "typescript": {}
    }
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "warn",
        "quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
        "jsx-quotes": ["error", "prefer-double"],
        "prefer-const": "off",
        "semi": ["warn", "always"],
        "comma-dangle": ["warn", {
            "objects": "always"
        }],
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": [1, { "extensions": ["ts", "tsx"] }],
        "react/no-unknown-property": 0
    }
}
